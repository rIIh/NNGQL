{
  "name": "todos_app",
  "version": "1.0.0",
  "description": "Todos Application on NextJS + GraphQL",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -k \"npm start --prefix client\" \"npm start --prefix server\"",
    "dev": "concurrently -k \"npm run dev --prefix client\" \"npm run dev --prefix server\"",
    "bootstrap:client": "cd client && npm install",
    "bootstrap:server": "cd server && npm install",
    "build": "cd client && npm run build",
    "postinstall": "npm run bootstrap:client ; npm run bootstrap:server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rIIh/TodoApp.git"
  },
  "keywords": [
    "todo",
    "next",
    "react",
    "graphql",
    "fastify"
  ],
  "author": "ratiih",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rIIh/TodoApp/issues"
  },
  "homepage": "https://github.com/rIIh/TodoApp#readme",
  "devDependencies": {
    "concurrently": "^5.0.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "eslint-plugin-jsx": "^0.1.0"
  }
}
